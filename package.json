{
	"version": "0.0.1",
	"name": "boilerplate-backend-node",
	"description": "Boilerplate Backend in Node.js",
	"license": "MIT",
	"author": "Ryan Lelek <ryanlelek@gmail.com>",
	"type": "module",
	"main": "src/index.js",
	"private": false,
	"scripts": {
		"start": "npm run db:up && node server.js",
		"db:up": "sequelize-cli db:migrate",
		"db:down": "sequelize-cli db:migrate:undo",
		"db:down:all": "sequelize-cli db:migrate:undo:all",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV='test' DEBUG='' SQL_URI='sqlite::memory:' COOKIE_SECRET='cookie-secret' jest --detectOpenHandles",
		"test:unit": "npm run test -- test/unit",
		"test:e2e": "npm run test -- test/e2e",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"prettier": "prettier --check .",
		"prettier:fix": "prettier --write ."
	},
	"engines": {
		"node": ">=20.14.0",
		"npm": ">=10.7.0"
	},
	"jest": {
		"setupFilesAfterEnv": [
			"<rootDir>/test/setup.js"
		],
		"collectCoverage": true,
		"collectCoverageFrom": [
			"./src/**",
			"!./src/sql/migrations/**"
		],
		"coverageThreshold": {
			"global": {
				"branches": 90,
				"functions": 90,
				"lines": 90,
				"statements": 90
			}
		}
	},
	"dependencies": {
		"argon2": "0.40.3",
		"body-parser": "1.20.2",
		"cookie-parser": "1.4.6",
		"debug": "4.3.5",
		"express": "4.19.2",
		"express-rate-limit": "7.3.0",
		"helmet": "7.1.0",
		"lodash": "4.17.21",
		"pg": "8.12.0",
		"pg-hstore": "2.3.4",
		"sequelize": "6.37.3",
		"sequelize-cli": "6.6.2",
		"ua-parser-js": "1.0.38",
		"validator": "13.12.0",
		"zod": "3.23.8"
	},
	"devDependencies": {
		"cross-env": "7.0.3",
		"eslint": "8.57.0",
		"eslint-config-standard": "17.1.0",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-jest": "28.6.0",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-promise": "6.2.0",
		"eslint-plugin-unused-imports": "3.2.0",
		"jest": "29.7.0",
		"prettier": "3.3.1",
		"sqlite3": "5.1.7",
		"supertest": "7.0.0"
	}
}
