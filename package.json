{
	"version": "0.0.1",
	"name": "boilerplate-backend-node",
	"description": "Boilerplate Backend in Node.js",
	"license": "MIT",
	"author": "Ryan Lelek <ryanlelek@gmail.com>",
	"type": "module",
	"main": "src/index.js",
	"engines": {
		"node": ">=20.14.0",
		"npm": ">=10.7.0"
	},
	"scripts": {
		"start": "node server.js",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --detectOpenHandles",
		"test:unit": "npm run test -- test/unit",
		"test:e2e": "npm run test -- test/e2e",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"prettier": "prettier --check .",
		"prettier:fix": "prettier --write ."
	},
	"jest": {
		"collectCoverage": true,
		"collectCoverageFrom": [
			"./src/**"
		],
		"coverageThreshold": {
			"global": {
				"branches": 90,
				"functions": 90,
				"lines": 90,
				"statements": 90
			}
		}
	},
	"dependencies": {
		"debug": "4.3.5",
		"express": "4.19.2",
		"express-rate-limit": "7.3.0",
		"helmet": "7.1.0",
		"lodash": "4.17.21",
		"validator": "13.12.0"
	},
	"devDependencies": {
		"cross-env": "7.0.3",
		"eslint": "8.57.0",
		"eslint-config-standard": "17.1.0",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-jest": "28.5.0",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-promise": "6.2.0",
		"eslint-plugin-unused-imports": "3.2.0",
		"jest": "29.7.0",
		"prettier": "3.3.0",
		"supertest": "7.0.0"
	}
}
