{
	"version": "0.0.1",
	"name": "boilerplate-backend-node",
	"description": "Boilerplate Backend in Node.js",
	"license": "MIT",
	"author": "Ryan Lelek <ryanlelek@gmail.com>",
	"type": "module",
	"main": "src/index.js",
	"private": false,
	"scripts": {
		"start": "npm run db:up && node server.js",
		"db:up": "sequelize-cli db:migrate",
		"db:down": "sequelize-cli db:migrate:undo",
		"db:down:all": "sequelize-cli db:migrate:undo:all",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV='test' DEBUG='' SQL_URI='sqlite::memory:' COOKIE_SECRET='cookie-secret' jest --detectOpenHandles",
		"test:unit": "npm run test -- test/unit",
		"test:e2e": "npm run test -- test/e2e",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"prettier": "prettier --check .",
		"prettier:fix": "prettier --write ."
	},
	"engines": {
		"node": ">=20.18.0",
		"npm": ">=10.8.2"
	},
	"jest": {
		"setupFilesAfterEnv": [
			"<rootDir>/test/setup.js"
		],
		"collectCoverage": true,
		"collectCoverageFrom": [
			"./src/**",
			"!./src/sql/migrations/**"
		],
		"coverageThreshold": {
			"global": {
				"branches": 60,
				"functions": 80,
				"lines": 80,
				"statements": 80
			}
		}
	},
	"dependencies": {
		"@google-cloud/storage": "7.13.0",
		"@sendgrid/mail": "8.1.4",
		"argon2": "0.41.1",
		"body-parser": "1.20.3",
		"cookie-parser": "1.4.7",
		"cors": "2.8.5",
		"debug": "4.3.7",
		"ejs": "3.1.10",
		"email-templates": "12.0.1",
		"express": "4.21.1",
		"express-rate-limit": "7.4.1",
		"form-data": "4.0.1",
		"helmet": "8.0.0",
		"lodash": "4.17.21",
		"mailgun.js": "10.2.3",
		"pg": "8.13.1",
		"pg-hstore": "2.3.4",
		"postmark": "4.0.5",
		"sequelize": "6.37.5",
		"sequelize-cli": "6.6.2",
		"stripe": "17.2.1",
		"ua-parser-js": "1.0.39",
		"validator": "13.12.0",
		"zod": "3.23.8"
	},
	"devDependencies": {
		"cross-env": "7.0.3",
		"eslint": "8.57.1",
		"eslint-config-standard": "17.1.0",
		"eslint-plugin-import": "2.31.0",
		"eslint-plugin-jest": "28.8.3",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-promise": "6.6.0",
		"eslint-plugin-unused-imports": "4.1.4",
		"jest": "29.7.0",
		"prettier": "3.3.3",
		"preview-email": "3.1.0",
		"sqlite3": "5.1.7",
		"supertest": "7.0.0"
	}
}
