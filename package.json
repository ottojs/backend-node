{
	"version": "0.0.1",
	"name": "boilerplate-backend-node",
	"description": "Boilerplate Backend in Node.js",
	"license": "MIT",
	"author": "Ryan Lelek <ryanlelek@gmail.com>",
	"type": "module",
	"main": "src/index.js",
	"private": false,
	"scripts": {
		"start": "npm run db:up && node server.js",
		"db:up": "sequelize-cli db:migrate",
		"db:down": "sequelize-cli db:migrate:undo",
		"db:down:all": "sequelize-cli db:migrate:undo:all",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV='test' DEBUG='' SQL_URI='sqlite::memory:' COOKIE_SECRET='cookie-secret' jest --detectOpenHandles",
		"test:unit": "npm run test -- test/unit",
		"test:e2e": "npm run test -- test/e2e",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"prettier": "prettier --check .",
		"prettier:fix": "prettier --write ."
	},
	"engines": {
		"node": ">=24.8.0",
		"npm": ">=11.6.0"
	},
	"jest": {
		"setupFilesAfterEnv": [
			"<rootDir>/test/setup.js"
		],
		"collectCoverage": true,
		"collectCoverageFrom": [
			"./src/**",
			"!./src/sql/migrations/**"
		],
		"coverageThreshold": {
			"global": {
				"branches": 60,
				"functions": 60,
				"lines": 75,
				"statements": 75
			}
		}
	},
	"dependencies": {
		"@google-cloud/storage": "7.17.1",
		"@sendgrid/mail": "8.1.5",
		"argon2": "0.44.0",
		"body-parser": "2.2.0",
		"cookie-parser": "1.4.7",
		"cors": "2.8.5",
		"debug": "4.4.1",
		"ejs": "3.1.10",
		"email-templates": "12.0.3",
		"express": "5.1.0",
		"express-rate-limit": "8.1.0",
		"form-data": "4.0.4",
		"helmet": "8.1.0",
		"lodash": "4.17.21",
		"mailgun.js": "12.0.3",
		"my-ua-parser": "2.0.4",
		"pg": "8.16.3",
		"pg-hstore": "2.3.4",
		"postmark": "4.0.5",
		"sequelize": "6.37.7",
		"sequelize-cli": "6.6.3",
		"stripe": "18.5.0",
		"uuid": "13.0.0",
		"validator": "13.15.15",
		"ws": "8.18.3",
		"zod": "4.1.8"
	},
	"devDependencies": {
		"@eslint/compat": "1.3.2",
		"@eslint/eslintrc": "3.3.1",
		"@eslint/js": "9.35.0",
		"cross-env": "10.0.0",
		"eslint": "9.35.0",
		"eslint-plugin-import": "2.32.0",
		"eslint-plugin-jest": "29.0.1",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-promise": "7.2.1",
		"eslint-plugin-unused-imports": "4.2.0",
		"globals": "16.4.0",
		"jest": "30.1.3",
		"prettier": "3.6.2",
		"preview-email": "3.1.0",
		"sqlite3": "5.1.7",
		"supertest": "7.1.4"
	}
}
