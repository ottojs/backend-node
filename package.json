{
  "version": "0.0.1",
  "name": "boilerplate-backend-node",
  "description": "Boilerplate Backend in Node.js",
  "license": "MIT",
  "author": "Ryan Lelek <ryanlelek@gmail.com>",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node server.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "dependencies": {
    "express": "4.19.2"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "jest": "29.7.0",
    "supertest": "7.0.0"
  }
}
